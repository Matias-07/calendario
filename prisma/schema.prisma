generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Task {
  id          String   @id @default(cuid())
  title       String
  notes       String  
  dueAt       DateTime
  done        Boolean  @default(false)

  // Para Telegram: evitar notificar 2 veces
  notifyAt    DateTime
  notifiedAt  DateTime

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([dueAt])
  @@index([notifyAt])
}
